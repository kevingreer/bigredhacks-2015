{
  "name": "scroll.",
  "version": "1.0",
  "manifest_version": 2,
  "description" : "Scrolls the page for you at set intervals of time.",
  "icons": { "16": "icons/scroll-16.png", "48": "icons/scroll-48.png", 
             "128": "icons/scroll-128.png" },

  "browser_action": {
    "default_icon": {
      "19": "icons/scroll-19.png",
      "38": "icons/scroll-38.png"
    },
    "default_title": "Click to Scroll",
    "default_popup": "browseraction/popup.html"
  },

    "permissions": [
          "activeTab"
        ]
}